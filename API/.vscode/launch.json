
	{
		"version": "0.2.0",
		"configurations": [
            {
                "name": "Attach to Chrome",
                "port": 9222,
                "request": "attach",
                "type": "pwa-chrome",
                "webRoot": "${workspaceFolder}"
            },
			{
				"name": ".NET Core Launch (web)",
				"type": "coreclr",
				"request": "launch",
				"preLaunchTask": "build",
				"program": "${workspaceFolder}/bin/Debug/net5.0/API.dll",
				"args": [],
				"cwd": "${workspaceFolder}",
				"stopAtEntry": false,
				"serverReadyAction": {
					"action": "openExternally",
					"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
				},
				"env": {
					"ASPNETCORE_ENVIRONMENT": "Development"
				},
				"sourceFileMap": {
					"/Views": "${workspaceFolder}/Views"
				}
			},
			{
				"name": ".NET Core Attach",
				"type": "coreclr",
				"request": "attach"
			}
		]
	}
	
